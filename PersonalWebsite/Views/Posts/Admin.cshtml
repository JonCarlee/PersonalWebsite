@model IEnumerable<PersonalWebsite.Models.Post>

@{
    ViewBag.Title = "Blog Entries Management";
}
<style>
    #stupid{
        height: 1.5em;
        max-height: 1.5em;
        overflow: hidden;
    }
</style>
<div class="col-sm-1"></div>
<div class="col-sm-10">
<h2 style="text-align: center">Blog Entries Management</h2>

<div style="text-align: right">
    <a href="@Url.Action("Create")" class="btn btn-color">Create New</a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Updated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th style="width: 400px;">
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MediaURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Updated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td id="stupid">
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MediaURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { slug = item.Slug }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
    </div>
<div class="col-sm-1"></div>
@section Scripts{
    <script>
    $(document).ready(function () {
        $("#stupid").dotdotdot({
            watch: "window"
        });
    });
    </script>
    }