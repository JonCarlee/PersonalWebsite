@using PersonalWebsite.Models

@model List<Post>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="page-header">
                Jon's Blog
                <small>  Now With Updates!</small>
            </h1>

            @foreach (var post in ViewBag.onePageOfPosts)
            {
              <!-- First Blog Post -->
                <h2>
                    <a href="@Url.Action("Details", new { Slug = post.Slug })">@post.Title</a>
                </h2>
                <p class="lead">
                    by <a href="index.php">Jon Carlee</a>
                </p>
                <p><span class="glyphicon glyphicon-time"></span> @post.Created.DateTime.ToLongDateString()</p>
                <hr>
    <img class="img-responsive" src="@post.MediaURL" onerror="whoops(this)" style="max-height: 300px; min-width: 290px;">
                <hr>
                <!--<p></p>-->
                <div class="stupid" style="height: 100px; max-height: 100px;">
                    @Html.Raw(post.Body)   
                </div>
                <a class="btn btn-color" href="@Url.Action("Details", new { Slug = post.Slug})">Read More! </a>
                <!--
                   
                -->
                <hr>
            }
            <!-- Pager -->
            <ul class="pager">
                <li class="previous">
                    <a href="#">← Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer →</a>
                </li>
            </ul>

        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#">A Thing</a>
                            </li>
                            <li>
                                <a href="#">Another Thing</a>
                            </li>
                            <li>
                                <a href="#">A Third Thing</a>
                            </li>
                            <li>
                                <a href="#">A Thing Thing</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#">Not a Thing</a>
                            </li>
                            <li>
                                <a href="#">Possibly a Thing</a>
                            </li>
                            <li>
                                <a href="#">Wanna Be a Thing</a>
                            </li>
                            <li>
                                <a href="#">[Insert a Thing Here]</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <!-- /.row -->
            </div>

            <!-- Side Widget Well -->
            <div class="well">
                <h4>Side Widget Well</h4>
                <p>So yeah!  Side Widget Well.  Cool. (?????)  Maybe one day I'll figure out what should go here?</p>
            </div>

        </div>

    </div>
    @Html.PagedListPager((IPagedList)ViewBag.OnePageOfPosts, page => Url.Action("Index", new { page }))

</div>
@section Scripts{
<script>
    $(document).ready(function () {
        $(".stupid").dotdotdot({
            watch: "window"
        });
    });
    function whoops(image) {
        image.onerror = "";
        image.src = "http://i93.photobucket.com/albums/l77/afkimel/Misc/THERES-NOTHING-HERE-e1348677191662_zpse6d3406c.jpg"
        return true;
    }
</script>
}