@model PersonalWebsite.Models.Comment
@{
    ViewBag.Title = "DeleteComment";
}
<div class="container">
    <h2 style="text-align: center">DeleteComment</h2>
    <p>Are you sure you want to delete this comment?</p>
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="commentId" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="~/Blog/@Model.Post.Slug" class="btn btn-color">Cancel</a>
    </form>
</div>