@model PersonalWebsite.Models.Post

@{
    ViewBag.Title = "Details";
}
<div class="container">

    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->
            <!-- Title -->
            <h1>@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by <a href="#">Jon Carlee</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span>@Model.Created.DateTime.ToLongDateString()</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">@Html.Raw(Model.Slug)</p>
            <p>@Html.Raw(Model.Body)</p>
            <hr>

            <!-- Blog Comments -->
            <!-- Comments Form -->
            <div class="well">
                <h4>Leave a Comment:</h4>
                <form role="form">
                    <div class="form-group">
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-color">Submit</button>
                </form>
            </div>

            <hr>

            <!-- Posted Comments -->
            <!-- Comment -->
            @foreach(var comment in Model.Comments)
{
            <div class="media">
                <a class="pull-left" href="#">
                    <img class="media-object" src="http://placehold.it/64x64" alt="">
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        @comment.Author.DisplayName
                        <small>@comment.Created.DateTime.ToShortDateString()</small>
                    </h4>
                    @comment.Body
                </div>
            </div>
}
        </div>
        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#">A Category</a>
                            </li>
                            <li>
                                <a href="#">Another Category</a>
                            </li>
                            <li>
                                <a href="#">Yet ANOTHER Category</a>
                            </li>
                            <li>
                                <a href="#">How Many Categories Are Here?</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#">lolololololo1ololololol</a>
                            </li>
                            <li>
                                <a href="#">Did You See What I Did There?</a>
                            </li>
                            <li>
                                <a href="#">Lotsa Points If You Found It</a>
                            </li>
                            <li>
                                <a href="#">[Insert Words And Maybe Something Witty Here]</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.row -->
            </div>

            <!-- Side Widget Well -->
            <div class="well">
                <h4>Side Widget Well</h4>
                <p>So yeah!  Side Widget Well.  Cool. (?????)  Maybe one day I'll figure out what should go here?</p>
            </div>

        </div>

    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright © Your Website 2014</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>
<p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


    </p>
</div>
